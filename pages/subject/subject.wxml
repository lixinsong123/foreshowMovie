<view class='container'>
  <view class="type-item" wx:for = "{{types}}" wx:key ="{{index}}"
    bindtap='typeHandler'
    data-type = "{{item.name}}"
  >
    <image
      class="type-img"
      src="{{item.img}}"
      mode='aspectFill'
    >
    </image>
    <text class="type-title">
      {{item.name}}
    </text>
  </view>
</view>